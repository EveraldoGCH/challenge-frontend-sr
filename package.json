{
	"name": "challenge-frontend-sr",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"frontend",
		"api"
	],
	"scripts": {
		"dev": "concurrently \"npm run dev --workspace=api\" \"npm run dev --workspace=frontend\"",
		"build": "npm run build --workspace=frontend",
		"lint": "npm run lint --workspace=frontend",
		"format": "npm run format --workspace=frontend",
		"prepare": "husky"
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"eslint": "^9.38.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.0",
		"eslint-plugin-react-refresh": "^0.4.24",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"prettier": "^3.6.2"
	},
	"lint-staged": {
		"frontend/**/*.{js,jsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"frontend/**/*.{json,css,md}": [
			"prettier --write"
		]
	}
}
